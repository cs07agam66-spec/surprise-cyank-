<script>
function tampilkanKejutan() {
    const pesan = document.getElementById("message");
    const foto = document.getElementById("foto");
    const music = document.getElementById("music");

    pesan.style.display = "block";
    pesan.innerHTML = 
        `Selamat merayakan hari jadian kita ‚ù§Ô∏è<br>
        Kita sudah bersama sejak <b>06 Oktober 2025</b>.<br>
        Makasih sudah tetap tinggal sama aku. Aku sayang kamu! üíû`;

    foto.style.display = "block";
    music.play();
    document.getElementById("popup").style.display = "flex";
    setInterval(buatHati, 500);
}

function buatHati() {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "üíñ";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.animationDuration = (2 + Math.random() * 3) + "s";
    document.body.appendChild(heart);

    setTimeout(() => heart.remove(), 5000);
}

function tutupPopup() {
    document.getElementById("popup").style.display = "none";
}
</script>

